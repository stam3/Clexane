<h1>Listing medicines</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Daysoffset</th>
    <th>Firsthour</th>
    <th>Secondhour</th>
    <th>Isspecificdays</th>
    <th>Specificdays</th>
    <th>Cancelednotificationdate</th>
    <th>Daysoffsetstartdate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @medicines.each do |medicine| %>
  <tr>
    <td><%= medicine.name %></td>
    <td><%= medicine.daysOffset %></td>
    <td><%= medicine.firstHour %></td>
    <td><%= medicine.secondHour %></td>
    <td><%= medicine.isSpecificDays %></td>
    <td><%= medicine.specificDays %></td>
    <td><%= medicine.canceledNotificationDate %></td>
    <td><%= medicine.daysOffsetStartDate %></td>
    <td><%= link_to 'Show', medicine %></td>
    <td><%= link_to 'Edit', edit_medicine_path(medicine) %></td>
    <td><%= link_to 'Destroy', medicine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

